<?xml version="1.0"?>
<robot name="robot">

	<!-- Base Footprint -->
	<link name="base_footprint">
		<inertial>
			<mass value="10" />
			<origin xyz="0 0 0" rpy="0 0 0" />
			<inertia ixx="0.15638" ixy="0" ixz="0" iyy="0.15638" iyz="0" izz="0.3125" />
		</inertial>
		<visual>
			<geometry>
				<cylinder length="0.0125" radius="0.25"/>
			</geometry>
            <material name="Blue">
                <color rgba="0 0 1 0.25" />
            </material>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.0125" radius="0.25"/>
			</geometry>
		</collision>
	</link>

	<!-- Base Link -->
	<link name="base_link">
		<inertial>
			<mass value="10" />
			<origin xyz="0 0 0.3" rpy="0 0 0" />
			<inertia ixx="0.23125" ixy="0" ixz="0" iyy="0.23125" iyz="0" izz="0.3125" />
		</inertial>
		<visual>
			<geometry>
				<cylinder length="0.3" radius="0.25"/>
			</geometry>
            <material name="Blue">
                <color rgba="0 0 1 0.25" />
            </material>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.3" radius="0.25"/>
			</geometry>
		</collision>
	</link>

	<!-- Right Wheel -->
	<link name="right_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00020833" ixy="0" ixz="0" iyy="0.00020833" iyz="0" izz="0.0003125"/>
        </inertial>
		<visual>
			<origin rpy="1.5708 0 0" xyz="0 -0.06 0" />
			<geometry>
				<cylinder length="0.025" radius="0.025"/>
			</geometry>
			<material name="Red">
     			        <color rgba="1 0 0 1" />
     			</material>
		</visual>
		<collision>
			<origin rpy="1.5708 0 0" xyz="0 -0.06 0" />
			<geometry>
				<cylinder length="0.025" radius="0.025"/>
			</geometry>
		</collision>
	</link>

	<!-- Left Wheel -->	
	<link name="left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00020833" ixy="0" ixz="0" iyy="0.00020833" iyz="0" izz="0.0003125"/>
        </inertial>
		<visual>
			<origin rpy="1.5708 0 0" xyz="0 0.06 0" />
			<geometry>
				<cylinder length="0.025" radius="0.025"/>
			</geometry>
			<material name="Red">
     			        <color rgba="1 0 0 1" />
     			</material>
		</visual>
		<collision>
			<origin rpy="1.5708 0 0" xyz="0 0.06 0" />
			<geometry>
				<cylinder length="0.025" radius="0.025"/>
			</geometry>
		</collision>
	</link>

	<!-- Front Caster -->
	<link name="front_caster">
        <inertial>
			<mass value="1" />
			<origin xyz="0 0 0" rpy="0 0 0" />
			<inertia ixx="0.0002526666666667" ixy="0" ixz="0" iyy="0.0002526666666667" iyz="0" izz="0.0005"/>
		</inertial>

		<!--CasterWheel-Support-->
		<visual>
			 <origin rpy="0 0 0" xyz="0 0 0" />
			<geometry>
				<sphere radius="0.02"/>
			</geometry>
			<material name="Blue">
     			        <color rgba="0 0 1 1" />
     			</material>
		</visual>
		<collision>
			 <origin rpy="0 0 0" xyz="0 0 0" />
			<geometry>
				<sphere radius="0.02"/>
			</geometry>
		</collision>

		<!--CasterWheel-->
		<visual>
			<origin rpy="0 0 0" xyz="0 0 -0.0125" />
			<geometry>
				<sphere radius="0.0125"/>
			</geometry>
			<material name="Grey">
     			        <color rgba="0.6 0.6 0.6 1" />
     			</material>
		</visual>
		<collision>
			<origin rpy="0 0 0" xyz="0 0 -0.0125" />
			<geometry>
				<sphere radius="0.0125"/>
			</geometry>
		</collision>
	</link>

	<!-- Back Caster -->
	<link name="back_caster">
        	<inertial>
			<mass value="1" />
			<origin xyz="0 0 0" rpy="0 0 0" />
			<inertia ixx="0.0002526666666667" ixy="0" ixz="0" iyy="0.0002526666666667" iyz="0" izz="0.0005"/>
		</inertial>

		<!--CasterWheel-Support-->
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.02"/>
			</geometry>
			<material name="Blue">
     			        <color rgba="0 0 1 1" />
     			</material>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.02"/>
			</geometry>
		</collision>

		<!--CasterWheel-->
		<visual>
			<origin xyz="0 0 -0.0125" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.0125"/>
			</geometry>
			<material name="Grey">
     			        <color rgba="0.6 0.6 0.6 1" />
     			</material>
		</visual>
		<collision>
			<origin xyz="0 0 -0.0125" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.0125"/>
			</geometry>
		</collision>
	</link>

	<!-- Front Laser -->
	<link name="front_laser">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00021667" ixy="0" ixz="0" iyy="0.00021667" iyz="0" izz="0.0004167"/>
        </inertial>
		<visual>
			<geometry>
				<box size="0.05 0.05 0.01"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<box size="0.05 0.05 0.01"/>
			</geometry>
		</collision>
	</link>

	<!-- Joints -->
	<joint name="base_to_base_footprint" type="continuous">
		<parent link="base_link"/>
		<child link="base_footprint"/>
		<origin xyz="0.0 0.0 -0.15"/>
		<axis xyz="0 0 1"/>
	</joint>
	
	<joint name="base_to_right_wheel" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<origin xyz="0.0 -0.2 -0.15"/>
		<axis xyz="0 1 0"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	
	<joint name="base_to_left_wheel" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<origin rpy="0 0 0" xyz="0.0 0.2 -0.15"/>
		<axis xyz="0 1 0"/>
		<joint_properties damping="1.0" friction="1.0" />
	</joint>

	<joint name="base_to_front_caster" type="fixed">
		<parent link="base_link"/>
		<child link="front_caster"/>
		<origin rpy="0 0 0" xyz="-0.1 0.0 -0.15"/>
		<joint_properties damping="0.0" friction="0.0" />
	</joint>

	<joint name="base_to_back_caster" type="fixed">
		<parent link="base_link"/>
		<child link="back_caster"/>
		<origin xyz="0.1 0.0 -0.15"/>
		<joint_properties damping="0.0" friction="0.0" />
	</joint>

	<joint name="base_to_front_laser" type="continuous">
		<parent link="base_link"/>
		<child link="front_laser"/>
		<origin xyz="0.25 0.0 0.075" rpy="3.14159 0 0"/>
	</joint>

</robot>


